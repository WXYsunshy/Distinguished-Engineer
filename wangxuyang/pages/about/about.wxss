.list {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.item {
  height: 120px;
  display: flex;
  margin-bottom: 10px;
}

image {
  width: 80px;
  height: 120px;
  background-color: #eee;
}

button {
  margin-right: 10px;
}

.text-title {
  font-size: 20px;
  color: black;
}

.text-desc {
  font-size: 15px;
  color: rgb(41, 39, 39);
}

.text-dubbing {
  font-size: 14px;
  color: rgb(61, 60, 60);
  /* margin-top: 30px; */
}

.text-score {
  margin-left: 8px;
  font-size: 20px;
  color: rgb(255, 139, 86);
}

.item-left {
  display: flex;
  margin-left: 20px;
  flex-direction: column;
}

.item-middle {
  display: flex;
  flex-grow: 2;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 10px;
  justify-content: space-between;
}

.item-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 5px;
}

.fixed {
  display: flex;
  position: fixed;
  height: 10%;
  width: 100%;
  flex-direction: row;
  bottom: 0;
  background-color: rgb(238, 238, 238);
}

.cart {
  display: flex;
  flex-grow: 3;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: black;
}

.balance {
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: rgb(250, 250, 250);
  background-color: rgb(250, 9, 9);
}

.message {
  position: absolute;
  top: 0px;
  left: 43%;
  width: 20px;
  height:20px;
  text-align:center;
  border-radius: 50%;
  color: rgb(250, 250, 250);
  background-color: rgb(253, 4, 4);
}
